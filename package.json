{
  "name": "ai-enhanced-repo-similarity-scout",
  "version": "2.0.0",
  "description": "AI-powered GitHub repository similarity scout using Cohere and Hugging Face",
  "main": "api-server.js",
  "scripts": {
    "start": "node api-server.js",
    "dev": "node api-server.js",
    "build": "echo 'Build complete'",
    "company": "node company-profile-server.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "contributors": "node enhanced-with-contributors.js",
    "database": "node database-cached-scout.js",
    "populate": "node scripts/batch-populate-database.js",
    "deploy-gpu": "chmod +x scripts/deploy-gpu-enhanced.sh && ./scripts/deploy-gpu-enhanced.sh",
    "deploy-hf": "chmod +x scripts/deploy-huggingface-gpu.sh && ./scripts/deploy-huggingface-gpu.sh",
    "setup-db": "psql $DATABASE_URL -f database/schema.sql"
  },
  "dependencies": {
    "@huggingface/inference": "^2.6.4",
    "axios": "^1.6.0",
    "cohere-ai": "^7.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "pg": "^8.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 10000,
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**",
      "!test-*.js",
      "!enhanced-*.js",
      "!ai-ultra-server.js",
      "!ai-enhanced-scout.js",
      "!jest.setup.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "verbose": true
  },
  "keywords": [
    "github",
    "ai",
    "similarity",
    "repository",
    "scout",
    "cohere",
    "huggingface",
    "semantic-search",
    "machine-learning",
    "company-analysis"
  ],
  "author": "AI-Enhanced RepoSimilarityScout",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
